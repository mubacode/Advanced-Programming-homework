@{
    ViewData["Title"] = "Home";
}

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">Welcome to Library Management System</h1>
            <p class="lead">Manage your books and view statistics with ease.</p>
            <hr class="my-4 w-50 mx-auto" />
        </div>
        
        <div class="row justify-content-center g-4">
            <div class="col-md-5 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <span class="display-1 text-primary"><i class="bi bi-book"></i></span>
                    <h5 class="card-title mt-3 fw-bold">Book Catalog</h5>
                    <p class="card-text">Browse all available books in our library collection.</p>
                    <a class="btn btn-primary mt-2 w-100" href="/Book/Catalog">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Catalog
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-5 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <span class="display-1 text-info"><i class="bi bi-bar-chart"></i></span>
                        <h5 class="card-title mt-3 fw-bold">Statistics</h5>
                        <p class="card-text">View library statistics and reports.</p>
                        <a class="btn btn-info text-white mt-2 w-100" href="/Statistics">
                            <i class="bi bi-arrow-right-circle me-2"></i>View Statistics
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="text-center mb-4">About Our Library Management System</h3>
                        <p>Our Library Management System provides a comprehensive solution for managing your library resources. 
                        Whether you're a small community library or a large academic institution, our platform offers the tools you need to
                        efficiently organize and track your collection.</p>
                        <div class="text-center mt-4">
                            <a class="btn btn-outline-primary" href="/Home/About">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .display-4 {
        color: #1a365d;
        font-weight: bold;
    }
</style> 