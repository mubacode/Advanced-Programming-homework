@model WebApp.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this author?</h4>
    <p>This action cannot be undone. All associated data will be permanently deleted.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h3>@Model.FullName</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            
            <dt class="col-sm-3">Birth Date</dt>
            <dd class="col-sm-9">@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToShortDateString() : "Unknown")</dd>
            
            <dt class="col-sm-3">Biography</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Biography)</dd>
            
            <dt class="col-sm-3">Number of Books</dt>
            <dd class="col-sm-9">@Model.Books.Count</dd>
        </dl>
    </div>
</div>

@if (Model.Books.Count > 0)
{
    <div class="alert alert-warning">
        <h5>Warning!</h5>
        <p>This author has @Model.Books.Count book(s) associated with them. Deleting this author will affect these books.</p>
    </div>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="AuthorId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form> 