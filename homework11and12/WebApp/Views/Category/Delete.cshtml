@model WebApp.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this category?</h4>
    <p>This action cannot be undone. All associated data will be permanently deleted.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            
            <dt class="col-sm-3">Number of Books</dt>
            <dd class="col-sm-9">@Model.Books.Count</dd>
        </dl>
    </div>
</div>

@if (Model.Books.Count > 0)
{
    <div class="alert alert-warning">
        <h5>Warning!</h5>
        <p>This category has @Model.Books.Count book(s) associated with it. Deleting this category will affect these books.</p>
    </div>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="CategoryId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form> 