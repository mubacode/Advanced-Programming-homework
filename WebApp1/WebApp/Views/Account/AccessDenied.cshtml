@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h1 class="display-4">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <p class="lead">You do not have permission to access this resource.</p>
                    <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                    <p class="mt-3">This area is restricted to librarians only.</p>
                    <p>If you believe you should have access to this feature, please contact the library administrator.</p>
                    <div class="mt-4">
                        <a asp-controller="Book" asp-action="Catalog" class="btn btn-primary">Return to Catalog</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 